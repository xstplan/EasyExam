<UserControl
    x:Class="XST.Exam.Views.Controls.WordStart"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">

            <Button
                Height="60"
                Classes="Flat Rounded"
                Command="{Binding GoCommand}"
                Content="记单词" />
            <Border Height="20" />
            <Button
                Height="60"
                Background="#3B8F6B"
                Classes="Flat Rounded"
                Command="{Binding GoSettingCommand}"
                Content="单词设置"
                Foreground="Black" />
            <Border Height="20" />
            <Button
                Height="60"
                Background="#068F84"
                Classes="Flat Rounded"
                Command="{Binding GoWordAddCommand}"
                Content="添加单词"
                Foreground="Black" />
        </StackPanel>
    </Grid>



</UserControl>
